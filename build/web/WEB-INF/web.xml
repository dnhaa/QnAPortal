<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>hadn.servlet.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowPostServlet</servlet-name>
        <servlet-class>hadn.servlet.ShowPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUserInfoServlet</servlet-name>
        <servlet-class>hadn.servlet.GetUserInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpvoteServlet</servlet-name>
        <servlet-class>hadn.servlet.UpvoteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownvoteServlet</servlet-name>
        <servlet-class>hadn.servlet.DownvoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowPostServlet</servlet-name>
        <url-pattern>/ShowPostServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserInfoServlet</servlet-name>
        <url-pattern>/GetUserInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpvoteServlet</servlet-name>
        <url-pattern>/UpvoteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownvoteServlet</servlet-name>
        <url-pattern>/DownvoteServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ShowPostServlet</welcome-file>
    </welcome-file-list>
</web-app>
